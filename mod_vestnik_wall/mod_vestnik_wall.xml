	<version>0.0.1-dev</version>
	<description>MOD_VESTNIK_WALL_DESCRIPTION</description>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.mod_vestnik_wall.ini</language>
		<language tag="en-GB">en-GB/en-GB.mod_vestnik_wall.sys.ini</language>
		<language tag="ru-RU">ru-RU/ru-RU.mod_vestnik_wall.ini</language>
		<language tag="ru-RU">ru-RU/ru-RU.mod_vestnik_wall.sys.ini</language>
	</languages>
	<files>
		<filename module="mod_vestnik_wall">mod_vestnik_wall.php</filename>
		<folder>tmpl</folder>
