	<authorEmail>boss@delo-design.ru</authorEmail>
	<authorUrl>https://delo-design.ru</authorUrl>
	<version>0.0.1-dev</version>
	<scriptfile>script.php</scriptfile>
	<description>COM_VESTNIK_DESCRIPTION</description>
	<install>
		<sql>
			<file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
		</sql>
	</install>
	<uninstall>
		<sql>
			<file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
		</sql>
	</uninstall>
	<files folder="site">
		<folder>controllers</folder>
		<folder>helpers</folder>
		<folder>models</folder>
		<folder>views</folder>
		<filename>controller.php</filename>
		<filename>vestnik.php</filename>
		<filename>router.php</filename>
	</files>
	<languages folder="site">
		<language tag="en-GB">language/en-GB/en-GB.com_vestnik.ini</language>
		<language tag="en-GB">language/en-GB/en-GB.com_vestnik.sys.ini</language>
		<language tag="ru-RU">language/ru-RU/ru-RU.com_vestnik.ini</language>
		<language tag="ru-RU">language/ru-RU/ru-RU.com_vestnik.sys.ini</language>
	</languages>
	<administration>
		<menu>COM_VESTNIK</menu>
		<submenu>
			<menu option="com_vestnik" view="posts">COM_VESTNIK_POSTS</menu>
			<menu option="com_vestnik" view="hashtags">COM_VESTNIK_HASHTAGS</menu>
		</submenu>
		<files folder="admin">
			<folder>controllers</folder>
			<folder>helpers</folder>
			<folder>models</folder>
			<folder>sql</folder>
			<folder>tables</folder>
			<folder>views</folder>
			<filename>access.xml</filename>
			<filename>config.xml</filename>
			<filename>controller.php</filename>
			<filename>vestnik.php</filename>
		</files>
		<languages folder="admin">
			<language tag="en-GB">language/en-GB/en-GB.com_vestnik.ini</language>
			<language tag="en-GB">language/en-GB/en-GB.com_vestnik.sys.ini</language>
			<language tag="ru-RU">language/ru-RU/ru-RU.com_vestnik.ini</language>
			<language tag="ru-RU">language/ru-RU/ru-RU.com_vestnik.sys.ini</language>
		</languages>
	</administration>
	<media destination="com_vestnik" folder="media">
		<folder>css</folder>
		<folder>js</folder>
		<folder>images</folder>
	</media>
	<layouts destination="components/vestnik" folder="layouts">
		<folder>wall</folder>
	</layouts>
	<cli destination="" folder="cli">
		<filename>vestnik.php</filename>
	</cli>
</extension>