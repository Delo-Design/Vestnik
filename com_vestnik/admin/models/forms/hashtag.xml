<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="content">
		<field name="title" type="text"
			   label="JGLOBAL_TITLE"
			   description="JFIELD_TITLE_DESC"
			   class="input-xxlarge input-large-text"
			   size="40"
			   required="true"/>
		<field name="alias" type="text"
			   label="JFIELD_ALIAS_LABEL"
			   description="JFIELD_ALIAS_DESC"
			   hint="JFIELD_ALIAS_PLACEHOLDER"
			   class="input-xxlarge"
			   size="40"/>
		<field name="hashtag" type="text"
			   label="COM_VESTNIK_HASHTAG_HASHTAG"
			   hint="JFIELD_ALIAS_PLACEHOLDER"
			   class="input-xxlarge"
			   size="40"/>
		<field name="description" type="textarea"
			   label="JGLOBAL_DESCRIPTION"
			   rows="3"
			   class="input-xxlarge"
			   filter="text"/>
	</fieldset>
	<fieldset name="display">
		<fields name="params">
			<field name="display_site" type="radio"
				   label="COM_VESTNIK_HASHTAG_DISPLAY_SITE"
				   class="btn-group btn-group-yesno"
				   default="1">
				<option value="1">JYES</option>
				<option value="0">JNO</option>
			</field>
			<field name="display_posting" type="radio"
				   label="COM_VESTNIK_HASHTAG_DISPLAY_POSTING"
				   class="btn-group btn-group-yesno"
				   default="1">
				<option value="1">JYES</option>
				<option value="0">JNO</option>
			</field>
		</fields>
	</fieldset>
	<fieldset name="global">
		<field name="id" type="text"
			   label="JGLOBAL_FIELD_ID_LABEL"
			   description="JGLOBAL_FIELD_ID_DESC"
			   class="readonly"
			   size="10"
			   default="0"
			   readonly="true"/>
		<field name="state" type="list"
			   label="JSTATUS"
			   description="JFIELD_PUBLISHED_DESC"
			   class="chzn-color-state"
			   filter="intval"
			   size="1"
			   default="1">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="-2">JTRASHED</option>
		</field>
		<field name="ordering" type="hidden" filter="unset"/>
	</fieldset>
</form>