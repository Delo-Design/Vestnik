<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter">
		<field name="search" type="text" hint="JSEARCH_FILTER"/>
		<field name="published" type="list" onchange="this.form.submit();">
			<option value="">JOPTION_SELECT_PUBLISHED</option>
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="-2">JTRASHED</option>
			<option value="2">JARCHIVED</option>
		</field>
	</fields>
	<fields name="list">
		<field name="fullordering" type="list" onchange="this.form.submit();" default="h.id DESC">
			<option value="">JGLOBAL_SORT_BY</option>
			<option value="h.title ASC">JGLOBAL_TITLE_ASC</option>
			<option value="h.title DESC">JGLOBAL_TITLE_DESC</option>
			<option value="h.id ASC">JGRID_HEADING_ID_ASC</option>
			<option value="h.id DESC">JGRID_HEADING_ID_DESC</option>
			<option value="h.state ASC">JSTATUS_ASC</option>
			<option value="h.state DESC">JSTATUS_DESC</option>
			<option value="h.ordering ASC">JGRID_HEADING_ORDERING_ASC</option>
			<option value="h.ordering DESC">JGRID_HEADING_ORDERING_DESC</option>
		</field>
		<field name="limit" type="limitbox" class="inputbox input-mini" default="25" onchange="this.form.submit();"/>
	</fields>
</form>